[program:logstash]
command={{ logstash_install_dir }}/logstash-{{ logstash_version }}/bin/logstash -f {{ logstash_conf_dir }}/ --quiet
autostart={{ logstash_auto_start }}
autorestart=true
stopsignal=KILL
redirect_stderr=true
stderr_logfile=AUTO
stderr_logfile_maxbytes={{ stderr_logfile_maxbytes }}
environment=SINCEDB_DIR={{ logstash_sincedb_dir }},SINCEDB_PATH={{ logstash_sincedb_dir }}
