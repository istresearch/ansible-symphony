[program:{{ sc_indexer_name }}]
command={{ sc_virtualenv_path }}/bin/scrapy runspider crawling/spiders/indexer_spider.py -a id=%(process_num)02d
directory= {{ sc_install_dir }}/default/indexer
environment=PATH="{{ sc_virtualenv_path }}/bin"
autostart=true
autorestart=true
process_name=%(process_num)02d
numprocs={{ sc_indexer_parallelism }}
startsecs={{ sc_indexer_start_secs }}
startretries={{ sc_indexer_start_retries }}
stopsignal=KILL
redirect_stderr=true
stdout_logfile=AUTO
stdout_logfile_maxbytes={{ sc_indexer_stdout_logfile_maxbytes }}
stderr_logfile=AUTO
stderr_logfile_maxbytes={{ sc_indexer_stderr_logfile_maxbytes }}
{% if sc_proxy_url is defined and sc_proxy_port is defined %}
environment = http_proxy="{{ sc_proxy_url }}:{{ sc_proxy_port }}", https_proxy="{{ sc_sc_proxy_url }}:{{ sc_proxy_port }}"
{% endif %}
