[program:{{ sc_kafka_monitor_supervisor_name }}]
command={{ miniconda_install_dir|default('/opt/miniconda') }}/bin/python -u {{ sc_kafka_monitor_name }}.py run
directory={{ sc_kafka_monitor_install_dir }}
process_name=%(program_name)s
numprocs={{ sc_kafka_monitor_num_procs }}
autostart=true
autorestart=true
startsecs={{ sc_kafka_monitor_start_secs }}
startretries={{ sc_kafka_monitor_start_retries }}
stopsignal=KILL
redirect_stderr=true
stderr_logfile=AUTO
stderr_logfile_maxbytes={{ sc_kafka_monitor_stderr_logfile_maxbytes }}
