[program:hbase-regionserver]
command={{ java_home }}/bin/java -Dproc_regionserver -XX:OnOutOfMemoryError="kill -9 %%p" -Xmx{{ hbase_heap_size }}m {{ hbase_opts }} -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.port={{ hbase_jmx_remote_port }} -Dhbase.log.dir={{ hbase_install_dir }}/default/logs -Dhbase.log.file=hbase.log -Dhbase.home.dir={{ hbase_install_dir }}/default -Dhbase.id.str= -Dhbase.root.logger=INFO,console -Dhbase.security.logger=INFO,RFAS org.apache.hadoop.hbase.regionserver.HRegionServer start
autostart=true
autorestart=true
user={{ hbase_user }}
startsecs={{ hbase_start_secs }}
startretries={{ hbase_start_retries }}
stopsignal=SIGTERM
redirect_stderr=true
stdout_logfile=AUTO
stdout_logfile_maxbytes={{ hbase_stdout_logfile_maxbytes }}
stderr_logfile=AUTO
stderr_logfile_maxbytes={{ hbase_stderr_logfile_maxbytes }}
environment = {{ hbase_env_vars }}