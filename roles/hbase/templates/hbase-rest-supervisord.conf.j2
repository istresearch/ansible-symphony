[program:hbase-rest]
command=/opt/hbase/default/bin/hbase rest start
autostart=true
autorestart=true
user={{ hbase_user }}
startsecs={{ hbase_start_secs }}
startretries={{ hbase_start_retries }}
stopsignal=SIGTERM
stopwaitsecs=600
redirect_stderr=true
stdout_logfile=AUTO
stdout_logfile_maxbytes={{ hbase_stdout_logfile_maxbytes }}
stderr_logfile=AUTO
stderr_logfile_maxbytes={{ hbase_stderr_logfile_maxbytes }}