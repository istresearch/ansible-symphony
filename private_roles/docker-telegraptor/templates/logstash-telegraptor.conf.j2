input {
  file {
    path => ['/var/log/telegraptor/*.log']
    codec => json
    tags => ['telegraptor']
  }
}

output {
    if 'telegraptor' in [tags] {
        elasticsearch {
            hosts => ["https://ist-es.istresearch.com:9200"]
            user => ES_UN
            password => ES_PW
            template => "/etc/logstash/templates/logs-template.json"
            template_name => "logs-*"
            template_overwrite => true
            index => "logs-telegraptor-%{+YYYY.MM.dd}"
            document_type => "%{[logger]}"
        }
    }
}