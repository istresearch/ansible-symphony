input {
  file {
    path => ['/var/log/scrapy-cluster/*.log']
    codec => json
    tags => ['scrapy-cluster']
  }
}

output {
    if 'scrapy-cluster' in [tags]{
        elasticsearch {
            hosts => "https://ist-es.istresearch.com:9200"
            template => "/etc/logstash/templates/logs-template.json"
            template_name => "logs-*"
            template_overwrite => true
            index => "logs-scrapy-cluster-%{+YYYY.MM.dd}"
            document_type => "%{[logger]}"
            user => "ist-es"
            password => "{{ logstash_es_pwd }}"
        }
    }
}
