{
    "template" : "{{ pulse_logstash_template_name }}",
    "order" : 0,
    "settings" : {
        "index.refresh_interval" : "5s"
    },
    "mappings" : {
        "_default_" : {
            "_all" : {"enabled" : true},
            "dynamic_templates" : [ {
                "string_fields" : {
                    "match" : "*",
                    "match_mapping_type" : "string",
                    "mapping" : {
                        "type" : "string", "index" : "not_analyzed", "omit_norms" : true

                    }
                }
            } ],
            "properties" : {
                "@version": { "type": "string", "index": "not_analyzed" },
                "geoip"  : {
                    "type" : "object",
                    "dynamic": true,
                    "path": "full",
                    "properties" : {
                        "location" : { "type" : "geo_point" }
                    }
                }
            }
        }
    }
}
