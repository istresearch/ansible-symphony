[program:googler]
command=python googler.py
directory=/opt/googler/default/googler
autostart=true
autorestart=true
process_name=g_%(process_num)02d
numprocs={{ googler_num_procs }}
startsecs=5
startretries=100
stopwaitsecs=10
redirect_stderr=true
stdout_logfile=AUTO
stdout_logfile_maxbytes=50MB
stderr_logfile=AUTO
stderr_logfile_maxbytes=50MB
environment = DISPLAY=:{{ xvfb_display }},PATH="{{ googler_virtualenv_path }}/bin:%(ENV_PATH)s"