[program:{{ crawling_name }}]
command={{ miniconda_install_dir|default('/opt/miniconda') }}/bin/scrapy runspider crawling/spiders/link_spider.py
directory= {{ crawling_install_dir }}
process_name=link_%(process_num)02d
numprocs={{ crawling_num_procs }}
autostart=true
autorestart=true
startsecs={{ crawling_start_secs }}
startretries={{ crawling_start_retries }}
stopsignal=KILL
redirect_stderr=true
stdout_logfile=AUTO
stdout_logfile_maxbytes={{ crawling_stdout_logfile_maxbytes }}
stderr_logfile=AUTO
stderr_logfile_maxbytes={{ crawling_stderr_logfile_maxbytes }}
{% if proxy_url is defined and proxy_port is defined %}
environment = http_proxy="{{ proxy_url }}:{{ proxy_port }}", https_proxy="{{ proxy_url }}:{{ proxy_port }}"{% endif %}
