# file: group_vars/kafka-nodes

# Only for production cluster.  For vagrant testing, host_vars is used

# Internap slaves have 6 data disks, striping data across them.
kafka_data_log_dir:
  - '/data/1/kafka/topic-logs'
  - '/data/2/kafka/topic-logs'
  - '/data/3/kafka/topic-logs'
  - '/data/4/kafka/topic-logs'
  - '/data/5/kafka/topic-logs'
  - '/data/6/kafka/topic-logs'

kafka_data_dir:
  - '/data/1/kafka'
  - '/data/2/kafka'
  - '/data/3/kafka'
  - '/data/4/kafka'
  - '/data/5/kafka'
  - '/data/6/kafka'

# According to Apache Docs, num io threads should be at least equal number of disks.
kafka_num_io_threads: 6

kafka_heap: 8G

kafka_log_retention_hours: 24
kafka_num_partitions: 3
kafka_replication_factor: 3
